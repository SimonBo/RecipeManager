%h1 Listing items

%table
  %tr
    %th Recipe
    %th Ingredient
    %th User
    %th Amount
    %th Measure
    %th
    %th
    %th

  - @items.each do |item|
    %tr
      %td= item.recipe
      %td= item.ingredient
      %td= item.user
      %td= item.amount
      %td= item.measure
      %td= link_to 'Show', item
      %td= link_to 'Edit', edit_item_path(item)
      %td= link_to 'Destroy', item, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Item', new_item_path
